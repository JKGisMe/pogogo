{{#poke-card
    onsubmit=attrs.onsubmit
    title='Login'
    buttonText='Login'
    buttonDisabled=validations.messages.length
}}

  <div class="row">
    {{poke-input
        value=model.email
        errors=validations.attrs.model.email.messages
        classNames='col s12'
        type='email'
        label='Email Address'}}
  </div>
  <div class="row">
    {{poke-input
        value=model.password
        errors=validations.attrs.model.password.messages
        classNames='col s12'
        type='password'
        label='Password'}}
  </div>
{{/poke-card}}